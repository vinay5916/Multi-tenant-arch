# Environment Configuration for Aviation Multi-Agent System

# Application Settings
APP_NAME=Aviation Multi-Agent System
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_MODEL=llama3.2

# LiteLLM Configuration  
LITELLM_MODEL=ollama/llama3.2
LITELLM_API_BASE=http://localhost:11434

# MCP Configuration
MCP_SERVERS_BASE_PORT=9000
MCP_CLIENT_TIMEOUT=30

# Security
SECRET_KEY=aviation-agent-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./aviation_agents.db

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO